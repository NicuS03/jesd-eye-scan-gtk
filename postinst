#!/bin/bash
echo "Running postinst script..."
mkdir -p /root/.config/autostart/
if [ -f "/usr/local/share/jesd/autostart/jesd_eye_scan.desktop" ]; then
    cp /usr/local/share/jesd/autostart/jesd_eye_scan.desktop /root/.config/autostart/
    echo "Desktop autostart file installed for root user"
else
    echo "Warning: Desktop file not found in package"
fi
exit 0
